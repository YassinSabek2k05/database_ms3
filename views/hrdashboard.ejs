<!-- views/hr/dashboard.ejs -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="/css/variables.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/css/hrdashboard.css">
  <title>HR Dashboard</title>
</head>
<body>
  <%- include('./partials/navbar') %>
  
  <!-- Flash Messages -->
  <div class="flash-messages">
    <% if (success && success.length > 0) { %>
      <div class="alert alert-success">
        <i class="fas fa-check-circle"></i>
        <span><%= success[0] %></span>
        <button class="alert-close" type="button"><i class="fas fa-times"></i></button>
      </div>
    <% } %>
    <% if (error && error.length > 0) { %>
      <div class="alert alert-error">
        <i class="fas fa-exclamation-circle"></i>
        <span><%= error[0] %></span>
        <button class="alert-close" type="button"><i class="fas fa-times"></i></button>
      </div>
    <% } %>
  </div>

  <div class="dashboard-container">
    <div class="dashboard-header">
      <h1><i class="fas fa-chart-line"></i> HR Management Dashboard</h1>
        <!-- <h1><%= data ? data.first_name + ' ' + data.last_name : 'User' %></h1> -->
      <p>Welcome, <strong><%= user ? user.name : 'User' %></strong></p>
        <!-- <h1><%= data ? data.dept_name : 'User' %></h1> -->
    </div>

    <!-- Tabs Navigation -->
    <div class="tabs-container">
      <div class="tabs-nav">
        <button class="tab-btn active" data-tab="leave">
          Accidental/Annual Leave
        </button>
        <button class="tab-btn" data-tab="compensation">
          Compensation Leave
        </button>
        <button class="tab-btn" data-tab="unpaid">
        Unpaid Leave
        </button>
        <button class="tab-btn" data-tab="deduction-hours">
          Deduct Missing Hours
        </button>
        <button class="tab-btn" data-tab="deduction-days">
          Deduct Missing Days
        </button>
        <button class="tab-btn" data-tab="deduction-unpaid">
          Deduct Unpaid Leave
        </button>
        <button class="tab-btn" data-tab="payroll">
          Generate Payroll
        </button>
      </div>
    </div>

    <!-- Tab Contents -->
    <div class="tabs-content">
      <!-- Accidental/Annual Leave Tab -->
      <div class="tab-pane active" id="leave">
        <div class="tab-header">
          <h2><i class="fas fa-calendar-check"></i> Accidental/Annual Leave</h2>
        </div>
        <% if (acanrequests && acanrequests.length > 0) { %>
                <div class="tab-body">
                  <%- include('./partials/accidental_annual_hr', { acanrequests: acanrequests }) %>
                </div>
        <% } else { %>
                <div class="tab-body">
                  <p>No accidental or annual leave requests available.</p>
                </div>
        <% } %>
      </div>
      <!-- Compensation Leave Tab -->
      <div class="tab-pane" id="compensation">
        <div class="tab-header">
          <h2><i class="fas fa-hand-holding-heart"></i> Compensation Leave</h2>
        </div>
        <% if (comprequests && comprequests.length > 0) { %>
                <div class="tab-body">
                  <%- include('./partials/compensation_hr', { comprequests: comprequests }) %>
                </div>
        <% } else { %>
                <div class="tab-body">
                  <p>No compensation leave requests available.</p>
                </div>
        <% } %>
      </div>

      <!-- Unpaid Leave Tab -->
      <div class="tab-pane" id="unpaid">
        <div class="tab-header">
          <h2><i class="fas fa-ban"></i> Unpaid Leave</h2>
        </div>
        <% if (unpaidrequests && unpaidrequests.length > 0) { %>
                <div class="tab-body">
                  <%- include('./partials/unpaid_hr', { unpaidrequests: unpaidrequests }) %>
                </div>
        <% } else { %>
                <div class="tab-body">
                  <p>No unpaid leave requests available.</p>
                </div>
        <% } %>
      </div>

      <!-- Deduction Hours Tab -->
      <div class="tab-pane" id="deduction-hours">
        <div class="tab-header">
          <h2><i class="fas fa-hourglass-end"></i> Deduction Hours</h2>
        </div>
        <div class="tab-body">
          <form class="employee-form" method="POST" action="/hr/deduct_hours">
            <div class="form-group">
              <label for="employee_id_hours">
                <i class="fas fa-id-badge"></i> Employee ID
              </label>
              <input 
                type="number" 
                id="employee_id_hours" 
                name="employee_id" 
                placeholder="Enter employee ID"
                required
              >
            </div>
            <button type="submit" class="btn btn-primary">
              Deduct Missing Hours
            </button>
          </form>
        </div>
      </div>

      <!-- Deduction Days Tab -->
      <div class="tab-pane" id="deduction-days">
        <div class="tab-header">
          <h2><i class="fas fa-calendar-times"></i> Deduction Days</h2>
        </div>
        <div class="tab-body">
          <form class="employee-form" method="POST" action="/hr/deduct_days">
            <div class="form-group">
              <label for="employee_id_days">
                <i class="fas fa-id-badge"></i> Employee ID
              </label>
              <input 
                type="number" 
                id="employee_id_days" 
                name="employee_id" 
                placeholder="Enter employee ID"
                required
              >
            </div>
            <button type="submit" class="btn btn-primary">
              Deduct Missing Days
            </button>
          </form>
        </div>
      </div>

      <!-- Deduction Unpaid Tab -->
      <div class="tab-pane" id="deduction-unpaid">
        <div class="tab-header">
          <h2><i class="fas fa-ban"></i> Deduction Unpaid</h2>
        </div>
        <div class="tab-body">
          <form class="employee-form" method="POST" action="/hr/deduct_unpaid">
            <div class="form-group">
              <label for="employee_id_unpaid">
                <i class="fas fa-id-badge"></i> Employee ID
              </label>
              <input 
                type="number" 
                id="employee_id_unpaid" 
                name="employee_id" 
                placeholder="Enter employee ID"
                required
              >
            </div>
            <button type="submit" class="btn btn-primary">
              Deduct Unpaid Leave
            </button>
          </form>
        </div>
      </div>

      <!-- Generate Payroll Tab -->
      <div class="tab-pane" id="payroll">
        <div class="tab-header">
          <h2><i class="fas fa-file-invoice-dollar"></i> Generate Payroll</h2>
        </div>
        <div class="tab-body">
          <form class="payroll-form" method="POST" action="/hr/generate_payroll">
            <div class="form-grid">
              <div class="form-group">
                <label for="employee_id_payroll">
                  <i class="fas fa-id-badge"></i> Employee ID
                </label>
                <input 
                  type="number" 
                  id="employee_id_payroll" 
                  name="employee_id" 
                  placeholder="Enter employee ID"
                  required
                >
              </div>

              <div class="date-range-section">
                <div class="date-range-header">
                  <i class="fas fa-calendar-alt"></i> Payroll Period
                </div>
                <div class="date-inputs-wrapper">
                  <div class="date-input-group">
                    <label for="from_date_payroll">
                      <span class="date-label">From</span>
                      <input 
                        type="date" 
                        id="from_date_payroll" 
                        name="from_date" 
                        required
                      >
                    </label>
                  </div>
                  
                  <div class="date-input-group">
                    <label for="to_date_payroll">
                      <span class="date-label">To</span>
                      <input 
                        type="date" 
                        id="to_date_payroll" 
                        name="to_date" 
                        required
                      >
                    </label>
                  </div>
                </div>
              </div>
            </div>

            <button type="submit" class="btn btn-primary">
              <i class="fas fa-file-export"></i> Generate Payroll
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Tab switching functionality
    const tabBtns = document.querySelectorAll('.tab-btn');
    const tabPanes = document.querySelectorAll('.tab-pane');

    tabBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        const tabName = this.getAttribute('data-tab');

        // Remove active class from all buttons and panes
        tabBtns.forEach(b => b.classList.remove('active'));
        tabPanes.forEach(p => p.classList.remove('active'));

        // Add active class to clicked button and corresponding pane
        this.classList.add('active');
        document.getElementById(tabName).classList.add('active');
      });
    });

    // Flash message handling
    document.querySelectorAll('.alert').forEach(alert => {
      const closeBtn = alert.querySelector('.alert-close');
      
      // Close on button click
      if (closeBtn) {
        closeBtn.addEventListener('click', () => {
          alert.classList.add('removing');
          setTimeout(() => alert.remove(), 300);
        });
      }
      
      // Auto-close after 5 seconds
      setTimeout(() => {
        if (alert.parentElement) {
          alert.classList.add('removing');
          setTimeout(() => alert.remove(), 300);
        }
      }, 5000);
    });

    // Payroll Date Range Validation
    const fromDatePayroll = document.getElementById('from_date_payroll');
    const toDatePayroll = document.getElementById('to_date_payroll');
    const payrollForm = document.querySelector('.payroll-form');

    if (fromDatePayroll && toDatePayroll) {
      // Set minimum date for to_date when from_date changes
      fromDatePayroll.addEventListener('change', () => {
        toDatePayroll.min = fromDatePayroll.value;
        
        // If to_date is earlier than from_date, clear it
        if (toDatePayroll.value && new Date(toDatePayroll.value) < new Date(fromDatePayroll.value)) {
          toDatePayroll.value = '';
        }
      });

      // Validate on form submit
      if (payrollForm) {
        payrollForm.addEventListener('submit', (e) => {
          if (!fromDatePayroll.value || !toDatePayroll.value) {
            e.preventDefault();
            alert('Please select both start and end dates for the payroll period');
            return false;
          }
          
          if (new Date(toDatePayroll.value) < new Date(fromDatePayroll.value)) {
            e.preventDefault();
            alert('End date must be greater than or equal to start date');
            return false;
          }
        });
      }
    }
  </script>
</body>
</html>