<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/variables.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/hrtablescroll.css">
    <title>Unpaid Leave Requests</title>
</head>
<body>
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Department</th>
        <th>Status</th>
        <th>Request ID</th> 
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% unpaidrequests.forEach(row => { %>
        <tr>
          <td><%= row.employee_id %></td>
          <td><%= row.first_name + ' ' + row.last_name %></td>
          <td><%= row.dept_name %></td>
          <td><%= row.status %></td>
          <td><%= row.request_ID %></td>
          <td>
            <form method="POST" action="/hr/approve_unpaid_leave">
              <input type="hidden" name="request_ID" value="<%= row.request_ID %>">
              <button type="submit" class="approveBtn">Approve/Reject</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>