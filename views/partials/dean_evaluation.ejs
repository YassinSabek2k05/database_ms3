<h4><i class="fas fa-user-check"></i> Submit Employee Evaluation</h4>
<form class="evaluation-form" method="POST" action="/academic/evaluateEmployee">
    <div class="form-group">
        <label for="employee_id">Select Employee to Evaluate:</label>
        <select id="employee_id" name="employee_id" required>
            <option value="">-- Select Employee --</option>
            <% if (departmentEmployees && departmentEmployees.length > 0) { %>
                <% departmentEmployees.forEach(emp => { %>
                    <% if (emp.employee_id !== user.id) { %>
                        <option value="<%= emp.employee_id %>">
                            <%= emp.first_name %> <%= emp.last_name %> (ID: <%= emp.employee_id %>)
                        </option>
                    <% } %>
                <% }); %>
            <% } else { %>
                <option value="" disabled>No employees found in your department.</option>
            <% } %>
        </select>
    </div>

    <div class="form-group">
        <label for="rating">Evaluation Score (1-5):</label>
        <input type="number" id="rating" name="rating" min="1" max="5" required>
    </div>

    <div class="form-group">
        <label for="semester">Semester (e.g., W25):</label>
        <input type="text" id="semester" name="semester" placeholder="W25" required>
    </div>

    <div class="form-group">
        <label for="comment">Remarks:</label>
        <textarea id="comment" name="comment" rows="4" placeholder="Optional comments on performance"></textarea>
    </div>

    <button type="submit" class="btn btn-primary btn-full-width">Submit Evaluation</button>
</form>
